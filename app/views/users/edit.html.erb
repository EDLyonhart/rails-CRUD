<h1>Edit a user</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <p>
      <%= error %>
    </p>
  <% end %>
<% end %>

<%= form_for @user, url:"/users/#{@user.id}" method: "PUT" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit %>
<% end %>

<%= link_to "Delete", "/users/#{@user.id}", method:"Delete" %>